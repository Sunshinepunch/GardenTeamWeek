@{
  Layout = "_Layout";
}

@model Garden.Models.Plot

<div class="behind">
<h3>Edit this Plot: @Model.Name</h3>
<hr>

@using (Html.BeginForm())
{
  <h4>@Html.LabelFor(model => model.Name)</h4>
  @Html.TextBoxFor(model=> model.Name, new { htmlAttributes = new { @class = "form-control", @required = "required" }})
  <br>
  <h4>@Html.LabelFor(model => model.Sun)</h4>
  @Html.EditorFor(model=> model.Sun, new { htmlAttributes = new { @class = "form-control"}})
  <br>
  <h4>@Html.LabelFor(model => model.Soil)</h4>
  @Html.EditorFor(model=> model.Soil, new { htmlAttributes = new { @class = "form-control" }})
  <br>
  <h4>@Html.LabelFor(model => model.Hardiness) Zone</h4>
  @Html.EditorFor(model => model.Hardiness, new { htmlAttributes = new { @class = "form-control", @type = "number"}})
  <br>
  <h4>@Html.LabelFor(model => model.Width) </h4>
  @Html.EditorFor(model => model.Width, new { htmlAttributes = new { @class = "form-control", @type = "number"}})
  <br>
  <h4>@Html.LabelFor(model => model.Length)</h4>
  @Html.EditorFor(model => model.Length, new { htmlAttributes = new { @class = "form-control", @type = "number"}})
  <br>
  <h4>@Html.LabelFor(model => model.Depth)</h4>
  @Html.EditorFor(model => model.Depth, new { htmlAttributes = new { @class = "form-control", @type = "number"}})
  <br>
  <h4>@Html.LabelFor(model => model.Privacy)</h4>
  @Html.EditorFor(model => model.Privacy, new { htmlAttributes = new { @class = "form-control"}})
  <br>
  <input type="submit" value="Add New Plot" class="btn btn-light"/>
}

</div>
