@{
  Layout = "_Layout";
}

@model Garden.Models.Plot
<div class="behind">
<h3>Add a New Plot:</h3>
<hr>

@using (Html.BeginForm())
{
  <h4>@Html.LabelFor(model => model.Name)</h4>
  @Html.TextBoxFor(model=> model.Name, new { @class = "form-control", @required = "required" })
  <br>
  <h4>@Html.LabelFor(model => model.Sun)</h4>
  @Html.TextBoxFor(model=> model.Sun, new { @class = "form-control"})
  <br>
  <h4>@Html.LabelFor(model => model.Soil)</h4>
  @Html.TextBoxFor(model=> model.Soil, new { @class = "form-control" })
  <br>
  <h4>@Html.LabelFor(model => model.Hardiness) Zone</h4>
  @Html.TextBoxFor(model => model.Hardiness, new { @class = "form-control", @type = "number"})
  <br>
  <h4>@Html.LabelFor(model => model.Width) </h4>
  @Html.TextBoxFor(model => model.Width, new { @class = "form-control", @type = "number"})
  <br>
  <h4>@Html.LabelFor(model => model.Length)</h4>
  @Html.TextBoxFor(model => model.Length, new { @class = "form-control", @type = "number"})
  <br>
  <h4>@Html.LabelFor(model => model.Depth)</h4>
  @Html.TextBoxFor(model => model.Depth, new { @class = "form-control", @type = "number"})
  <br>
  <h4>@Html.LabelFor(model => model.Privacy)</h4>
  @Html.TextBoxFor(model => model.Privacy, new { @class = "form-control"})
  <br>
  <input type="submit" value="Add New Plot" class="btn btn-light"/>
}

</div>
