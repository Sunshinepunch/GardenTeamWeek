@{
  Layout = "_Layout";
}

@model Garden.Models.Plot
<div class="behind">
<h3>Add a New Plot:</h3>
<hr>

@using (Html.BeginForm())
{
  <h4>@Html.LabelFor(model => model.Name)</h4>
  @Html.TextBoxFor(model=> model.Name, new { @class = "form-control" })
  <br>
  <h4>@Html.LabelFor(model => model.Sun)</h4>
  @Html.DropDownList("Sun", new List<SelectListItem> {
    new SelectListItem { Text = "‚òÄÔ∏è Full Sun ‚òÄÔ∏è", Value = "Full Sun"},
    new SelectListItem { Text = "‚õÖ Partial Shade ‚õÖ", Value = "Partial Shade"},
    new SelectListItem { Text = "üï∂Ô∏è Shade üï∂Ô∏è", Value = "Shade"}
  }, new { @class = "form-control" })
  <br>
  <h4>@Html.LabelFor(model => model.Soil)</h4>
  @Html.DropDownList("Soil", new List<SelectListItem> { 
    new SelectListItem { Text = "Clay", Value = "Clay" },
    new SelectListItem { Text = "Sandy", Value = "Sandy" },
    new SelectListItem { Text = "Silty", Value = "Silty" },
    new SelectListItem { Text = "Peaty", Value = "Peaty" },
    new SelectListItem { Text = "Chalky", Value = "Chalky" },
    new SelectListItem { Text = "Loamy", Value = "Loamy" }
    }, new { @class = "form-control" })
  <br>
  <h4>@Html.Label("Zipcode")</h4> 
  @Html.TextBoxFor(model => model.ZipCode, new { @class = "form-control", @type = "number"})
  <br>
  <h4>@Html.LabelFor(model => model.Width) </h4>
  @Html.TextBoxFor(model => model.Width, new { @class = "form-control", @type = "number", @placeholder="Width in feet"})
  <br>
  <h4>@Html.LabelFor(model => model.Length)</h4>
  @Html.TextBoxFor(model => model.Length, new { @class = "form-control", @type = "number", @placeholder="Length in feet"})
  <br>
  <h4>@Html.LabelFor(model => model.Depth)</h4>
  @Html.TextBoxFor(model => model.Depth, new { @class = "form-control", @type = "number", @placeholder="Depth in feet"})
  <br>
  <h4>@Html.LabelFor(model => model.Privacy)</h4>
  @Html.ListBox("Privacy", new List<SelectListItem> {
    new SelectListItem { Text = "Public", Value = "Public"},
    new SelectListItem { Text = "Private", Value = "Private"}
    }, new { @class = "form-control"})
  <br>
  <input type="submit" value="Add New Plot" class="btn btn-light"/>
}

</div>
