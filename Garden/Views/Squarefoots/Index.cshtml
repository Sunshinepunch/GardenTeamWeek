@using Garden.Models;
@{
  Layout = "_Layout";
}
@model List<Garden.Models.Squarefoot>;
<div class="behind">
<h2>Squarefoots</h2>

@if (@Model.Count == 0)
{
  <h3>No squarefoots have been added yet!</h3>
}

@foreach (Squarefoot squarefoot in Model)
{
  <li>@Html.ActionLink($"{squarefoot.Name}", "Details", new { id = squarefoot.SquarefootId })</li>
}

<p class="btn btn-light">@Html.ActionLink("Add New Squarefoot", "Create")</p>
<p class="btn btn-light">@Html.ActionLink("Home", "Index", "Home")</p>
</div>